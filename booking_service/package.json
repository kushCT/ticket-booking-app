	"main": "src/server.js",
	"type": "module",
	"scripts": {
		"dev": "nodemon --legacy-watch --watch src --ext ts,js --exec node --trace-warnings bootstrap.mjs",
		"start": "node dist/server.js",
		"build": "tsc",
		"db:generate": "tsx node_modules/drizzle-kit/bin.cjs generate",
