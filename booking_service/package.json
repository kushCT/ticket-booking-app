		"@types/pg": "^8.15.5",
		"@types/supertest": "^6.0.3",
		"drizzle-kit": "^0.18.1",
		"nodemon": "^3.1.10",
		"supertest": "^7.1.4",
		"ts-node": "^10.9.2",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3"
	},
